
<div class="parent-editform">
    <div class="outer-header">
        <h1 class="ui header">Edit post :{{post.title}} </h1>
    </div>

<div class="outerbutton">
<button class="ui green button" id="add-new" type="button">Add New Post </button>
</div>

</div>

<form class="ui form" id="sumbitform">
  <div class="field">
    <label>Title</label>
    <input type="text" id="title" value="{{post.title}}">
  </div>

    <div class="field">
    <label>Description:</label>
    <textarea id="description">{{post.description}}</textarea>
  </div>

       <div class="form-group">
            <button class="ui green button" id="update-post" type="submit">Save Post</button>
            <button class="ui red button" id="deletepost" data-id="{{post.id}}" type="button">Delete Post</button>
        </div>
</form>



<script src="/js/editpost.js"></script>